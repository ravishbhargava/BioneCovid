<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tvContinue"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="@dimen/spacing_large"
            android:padding="@dimen/spacing_normal"
            android:text=" What is your age?*"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/font_xlarge" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_selected_border"
            android:gravity="center"
            android:hint=""
            android:inputType="number"
            android:maxLength="3"
            android:minWidth="150dp"
            android:minHeight="50dp"
            android:padding="@dimen/spacing_normal"
            android:textColor="@color/black"
            android:textSize="@dimen/font_large" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_normal"
        android:background="@drawable/drawable_common_button"
        android:drawableRight="@drawable/ic_continue"
        android:gravity="center"
        android:padding="@dimen/spacing_normal"
        android:text="CONTINUE"
        android:textColor="@color/white"
        android:textSize="@dimen/font_large" />
</RelativeLayout>
